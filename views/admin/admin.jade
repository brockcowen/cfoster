    .demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      // Splash screen
      section#page-splash
        h3.logo C. Foster Physical Therapists'
        div
          button#sign-in-button.mdl-button--raised.mdl-button.mdl-js-button.mdl-js-ripple-effect
            i.material-icons account_circle
            |  Login
      // Header section containing logo and menu
      header.header.mdl-layout__header.mdl-color-text--white.mdl-color--light-blue-700
        .mdl-layout__header-row.titlebar
          h3.logo C. Foster Physical Therapists'
          button#sign-out-button.mdl-button--raised.mdl-button.mdl-js-button.mdl-js-ripple-effect
            i.material-icons account_circle
            |  Sign out
        // Navigation Bar
        .tab.mdl-layout__header-row.mdl-color--light-blue-600
          .mdl-tab
            #menu-recent.mdl-layout__tab.is-active.mdl-button.mdl-js-button.mdl-js-ripple-effect
              i.material-icons new_releases
              |  Recent
            #menu-my-posts.mdl-layout__tab.mdl-button.mdl-js-button.mdl-js-ripple-effect
              i.material-icons home
              |  My posts
            #menu-my-top-posts.mdl-layout__tab.mdl-button.mdl-js-button.mdl-js-ripple-effect
              i.material-icons trending_up
              |  My top posts
            button#add.mdl-button.mdl-js-button.mdl-button--fab.mdl-color--amber-400.mdl-shadow--4dp.mdl-js-ripple-effect
              i.material-icons mode_edit
      main.mdl-layout__content.mdl-color--grey-100
        // Show the add post form

        // Show a list of recent posts
        section#recent-posts-list.mdl-grid.content(style='display:none')
          .posts-container.mdl-cell.mdl-cell--12-col.mdl-grid
        // Show the list of user's posts
        section#user-posts-list.mdl-grid.content(style='display:none')
          .posts-container.mdl-cell.mdl-cell--12-col.mdl-grid
        // Show the list of top user's posts
        section#top-user-posts-list.mdl-grid.content(style='display:none')
          .posts-container.mdl-cell.mdl-cell--12-col.mdl-grid
